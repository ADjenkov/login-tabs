<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">

    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back"/>
        <Label class="action-bar-title" text="{{ name }}"></Label>
    </ActionBar>

    <StackLayout>
        <Label class="m-10 h3" text="{{ description }}" verticalAlignment="top" ></Label>
        <Button text="Next Player" tap="onNavigateNextPlayer"></Button>
        <Button text="Go To Players" tap="onNavigatePlayers"></Button>
        <Button text="Back()" tap="onBack"></Button>
        <Button text="BackById(playerTab)" tap="onBackById"></Button>
        <Button text="BackById(rootFrame)" tap="onBackByIdRoot"></Button>
    </StackLayout>
</Page>